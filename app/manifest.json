{
    "name": "playa",
    "description": "dead simple mp3 player",
    "author": "http://github.com/dekztah",
    "version": "3",
    "manifest_version": 2,
    "default_locale": "en",
    "permissions": [
        "file:///*",
        {
            "fileSystem": [
                "directory"
            ]
        }
    ],
    "icons": {
        "16": "images/icon-16.png",
        "128": "images/icon-128.png"
    },
    "app": {
        "background": {
            "scripts": [
                "scripts/main.js",
                "scripts/chromereload.js",
                "scripts/vendor/angular.js",
                "scripts/vendor/moment.js"
            ]
        }
    }
}
