{
    "name": "__MSG_appName__",
    "description": "__MSG_appDescription__",
    "version": "3",
    "manifest_version": 2,
    "default_locale": "en",
    "permissions": [
        "file:///*",
        {
            "fileSystem": [
                "directory"
            ]
        }
    ],
    "icons": {
        "16": "images/icon-16.png",
        "128": "images/icon-128.png"
    },
    "app": {
        "background": {
            "scripts": [
                "scripts/main.js",
                "scripts/chromereload.js",
                "scripts/vendor/angular.js",
                "scripts/vendor/moment.js"
            ]
        }
    }
}
